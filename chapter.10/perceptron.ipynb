    "def predict(row, weights):\n",
    "  activation = weights[0]\n",
    "  \n",
    "  for i in range(len(row)):\n",
    "    activation += weights[i + 1] * row[i]\n",
    "  \n",
    "  return 1.0 if activation >= 0 else 0.0"
   ]
  }
